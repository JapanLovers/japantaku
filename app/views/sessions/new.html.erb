<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :pseudo_or_email, "Pseudo ou email" %><br />
    <%= f.text_field :pseudo_or_email %>
  </div>
  <div class="field">
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "S'identifier" %>
  </div>
<% end %>
